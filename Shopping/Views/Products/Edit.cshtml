@model ProductDto
@{
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Product</h2>

        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <div class="col-sm-4 col-form-label">Id</div>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["id"]" >
                   
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 col-form-label">ProductName</div>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductName" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-sm-4 col-form-label">ProductBrand</div>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductBrand" />
                    <span asp-validation-for="ProductBrand" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 col-form-label">ProductCategory</div>
                <div class="col-sm-8">

                    <select class="form-select" asp-for="ProductCategory">
                        <option value="Other">Other</option>
                        <option value="Phones">Phones</option>
                        <option value="Computer">Computer</option>
                        <option value="Cars">Cars</option>

                    </select>

                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 col-formcol-form-label">ProductPrice</div>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductPrice" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-4 col-form-label">ProductDescription</div>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="ProductDescription"></textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="Submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index" role="button">Cancel</a>
                </div>

            </div>
        </form>
    </div>
</div>